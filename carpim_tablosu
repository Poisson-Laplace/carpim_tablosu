#include <iostream>
using namespace std;
int main() {
    int sondeger;
    cout << "son deger gir: ";
    cin >> sondeger;
    for (int i = 1; i <= sondeger; i++) {
        switch (i) {
        case 1:
            cout << "   " << i << "\t";
            break;
        default:
            cout << i << "\t";
            break;
        }
    }
    cout << "\n";
    for (int i = 1; i <= sondeger; i++) {
        cout << i << "| ";
        for (int a = 1; a <= sondeger; a++) {
            cout << a * i << "\t";
        }
        cout << "\n";
    }
    return 0;
}
